@model OrderViewModel

@{
    ViewData["Title"] = "Все заказы";
    Layout = "_AccountLayout";
}

@if (!Model.GetAllOrders.Any())
{
    <div class="text-center">
        <b><i>Ничего не было найдено.</i></b>
    </div>
    <div class="text-center mt-3">
        <a asp-controller="Home" asp-action="Index" type="submit">
            <button class="btn btn-danger">На главную страницу</button>
        </a>
    </div>
}
else
{
    <div class="container">
        <div class="text-center">
            <b><i>Все заказы.</i></b>
        </div>
        <div class="row">
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-center mt-1 ml-4">
                            <div class="row">
                                @{
                                    foreach (var order in Model.GetAllOrders)
                                    {
                                        <div class="col-sm-auto mt-2 mb-4 ml-sm-2">
                                            <p>
                                                <b>
                                                    Имя покупателя: <i>@order.FirstName</i>
                                                    <br />
                                                    Фамилия покупателя: <i>@order.LastName</i>
                                                </b>
                                                <br />
                                                Email адрес: @order.Email
                                                <br />
                                                Адрес: @order.Address
                                                <br />
                                                <strong>Время заказа: <i>@order.OrderTime</i></strong>
                                            </p>
                                            <a href="@Url.Action("ShowDetail", "Order", new {id = order.Id})">
                                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Подробнее</button>
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="mt-3">
                            <a asp-controller="Home" asp-action="Index" type="submit">
                                <button class="btn btn-danger">На главную страницу</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}