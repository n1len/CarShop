                                        <option value="1987">1987</option>
                                        <option value="1986">1986</option>
                                        <option value="1985">1985</option>
                                        <option value="1984">1984</option>
                                        <option value="1983">1983</option>
                                        <option value="1982">1982</option>
                                        <option value="1981">1981</option>
                                        <option value="1980">1980</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select class="form-control" name="car.BodyType" autocomplete="off">
                                        <option value="" selected="">Тип кузова</option>
                                        <option value="Внедорожник">Внедорожник</option>
                                        <option value="Седан">Седан</option>
                                        <option value="Хэтчбек">Хэтчбек</option>
                                        <option value="Минивэн">Минивэн</option>
                                        <option value="Универсал">Универсал</option>
                                        <option value="Купе">Купе</option>
                                        <option value="Кабриолет">Кабриолет</option>
                                        <option value="Пикап">Пикап</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select class="form-control" name="car.GearBox" autocomplete="off">
                                        <option value="" selected="">КПП</option>
                                        <option value="Механика">Механика</option>
                                        <option value="Автомат">Автомат</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select class="form-control" name="car.DriveUnit" autocomplete="off">
                                        <option value="" selected="">Привод</option>
                                        <option value="Передний">Передний</option>
                                        <option value="Задний">Задний</option>
                                        <option value="Полный">Полный</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Цена" name="car.Price" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select class="form-control" name="car.Color" autocomplete="off">
                                        <option value="" selected="">Цвет кузова</option>
                                        <option value="Белый">Белый</option>
                                        <option value="Бордовый">Бордовый</option>
                                        <option value="Жёлтый">Жёлтый</option>
                                        <option value="Зелёный">Зелёный</option>
                                        <option value="Коричневый">Коричневый</option>
                                        <option value="Красный">Красный</option>
                                        <option value="Оранжевый">Оранжевый</option>
                                        <option value="Серебристый">Серебристый</option>
                                        <option value="Серый">Серый</option>
                                        <option value="Синий">Синий</option>
                                        <option value="Фиолетовый">Фиолетовый</option>
                                        <option value="Чёрный">Чёрный</option>
                                        <option value="Другой">Другой</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Описание" name="car.Description" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <p class="col text-left">
                                <button class="btn btn-danger" asp-controller="Admin" asp-action="AddSuccess" type="submit">Добавить</button>
                            </p>
                            <p class="col text-right">
                                <button class="btn btn-danger" asp-controller="Admin" asp-action="Index">Назад</button>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    }
}
