@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mt-5 card-text text-center">На данной странице отображаются машины из категории "Favorite".</h5>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="row">
                            @{
                                foreach (var car in Model.FavCars)
                                {
                                    <div class="col-sm-4 text-center mb-2">
                                        <h2>@car.Model</h2>
                                        <p>Цена: @car.Price.ToString("c")</p>
                                        <a href="@Url.Action("Show", "Car", new {id = car.Id})">
                                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Подробнее</button>
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<footer class="footer">
    <div class="container">
        <a href="@Url.Action("Add", "Car")">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Добавить машину</button>
        </a>
    </div>
</footer>

