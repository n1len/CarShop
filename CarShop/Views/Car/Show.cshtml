@model CarShop.Infrastructure.Car

@{
    ViewData["Title"] = Model.Brand;
}


<div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h6 class="card-text mt-5 text-center">Подробное описание машины модели "@Model.Model",марки "@Model.Brand"</h6>
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <h5>@Model.Model</h5>
                        <p>@Model.Brand</p>
                        <p>@Model.Description</p>
                        <p>Price:@Model.Price.ToString("c")</p>
                        <a href="@Url.Action("Delete", "Car", new {id = Model.Id})">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Удалить</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
